<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:graphic_editor">

    <Style TargetType="{x:Type local:ColorPicker}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ColorPicker}">
                    <Grid>
                        <Button x:Name="PART_ColorButton" 
                                BorderBrush="Black" 
                                BorderThickness="1" 
                                Padding="2" 
                                Width="{TemplateBinding Width}" 
                                Height="{TemplateBinding Height}">
                            <Border Background="{Binding SelectedColor, RelativeSource={RelativeSource TemplatedParent}, Converter={x:Static local:ColorToBrushConverter.Instance}}"
                                    BorderBrush="DarkGray"
                                    BorderThickness="1"
                                    CornerRadius="2"/>
                        </Button>

                        <Popup x:Name="PART_ColorPopup" 
                               Placement="Bottom" 
                               AllowsTransparency="True" 
                               StaysOpen="False">
                            <Border BorderBrush="Gray" 
                                    BorderThickness="1" 
                                    Background="White" 
                                    Padding="5" 
                                    CornerRadius="3">
                                <UniformGrid x:Name="PART_ColorGrid" 
                                             Columns="4" 
                                             Width="100" 
                                             Height="80"/>
                            </Border>
                        </Popup>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>